<Window x:Class="Reps_Sheet.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="800"
        MaxHeight="600" MaxWidth="800">

    <Grid Background="Black">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <MediaElement x:Name="BackgroundVideo"
                      Source="D:\Studies\3rd Semester\Modules\EC3404 - GUI Programming\Project\DesktopApp\Reps-Sheet\Reps-Sheet\resources\sloop.mp4"
                      LoadedBehavior="Play"
                      UnloadedBehavior="Manual"
                      Stretch="Fill"
                      Volume="0"
                      IsHitTestVisible="False"
                      MediaEnded="BackgroundVideo_MediaEnded" Grid.ColumnSpan="2"
                      
                      Opacity="0.5"/>

        <!-- Left side: List of dates -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Select Date"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="10"
                       Foreground="LightGreen"/>
            <ListBox x:Name="DateListBox" 
                     SelectionChanged="DateListBox_SelectionChanged" 
                     Margin="10" 
                     Background="Black"
                     Opacity="0.5"
                     Foreground="White"
                     FontSize="12"/>
        </StackPanel>

        <!-- Right side: Workouts and controls -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Workouts"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="0,0,0,10"
                       Foreground="LightGreen"/>
            <ListView x:Name="WorkoutsListView" 
                      Height="300" 
                      SelectionChanged="WorkoutsListView_SelectionChanged"
                      Background="black" Opacity="0.6"
                      Foreground="White"
                      >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <!-- Default Style: White text, green background -->
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Opacity" Value="0.6"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>

                        <!-- Hover Style: Dark green text, same background -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Background" Value="Azure"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>

                            <!-- Selected Style: Green background, white text -->
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="Green"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding WorkoutName}" Width="150"/>
                        <GridViewColumn Header="Reps" DisplayMemberBinding="{Binding Reps}" Width="50"/>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateDone}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                
                <Button Content="+ Add"
                        Click="AddWorkout_Click"
                        Width="100" Margin="5"
                        FontWeight="Bold"
                        Foreground="Azure"
                        Background="#28a745"
                        x:Name="Add_btn"
                        />
                <Button Content="🗘 Update"
                        Click="UpdateWorkout_Click"
                        Width="100"
                        Margin="5"
                        FontWeight="Bold"
                        Foreground="Azure"
                        Background="#28a745"/>
                <Button Content="🗑 Delete"
                        Click="DeleteWorkout_Click"
                        Width="100" Margin="5"
                        Background="Red"
                        Foreground="Azure"
                        FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Workout Name"
                               Foreground="Azure"
                               FontSize="14"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                    <TextBox x:Name="WorkoutNameTextBox" 
                             Width="200"
                             Background="Black"
                             Opacity="0.5"
                             Foreground="White"
                             Margin="193 5 0 0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Reps"
                               Foreground="Azure"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"/>
                    <TextBox x:Name="RepsTextBox"
                             Width="200" 
                             Background="Black"
                             Opacity="0.5"
                             Foreground="White"
                             Margin="263 5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Date Done"
                               Foreground="Azure"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="14"/>
                    <DatePicker x:Name="DateDonePicker"
                                Width="200" 
                                Background="Black"
                                Opacity="0.5"
                                Foreground="Black"
                                Margin="224 0">
                        <DatePicker.CalendarStyle>
                            <Style TargetType="Calendar">
                                <Setter Property="Background" Value="Black"/>
                                <Setter Property="Opacity" Value="0.9"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </DatePicker.CalendarStyle>
                    </DatePicker>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
