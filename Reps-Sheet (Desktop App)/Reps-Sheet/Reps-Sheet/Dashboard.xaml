<Window x:Class="Reps_Sheet.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side: List of dates -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Select Date" FontWeight="Bold" FontSize="16" Margin="10"/>
            <ListBox x:Name="DateListBox" 
                     SelectionChanged="DateListBox_SelectionChanged" 
                     Margin="10" />
        </StackPanel>

        <!-- Right side: Workouts and controls -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Workouts" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <ListView x:Name="WorkoutsListView" 
                      Height="300" 
                      SelectionChanged="WorkoutsListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding WorkoutName}" Width="150"/>
                        <GridViewColumn Header="Reps" DisplayMemberBinding="{Binding Reps}" Width="50"/>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateDone}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Workout" Click="AddWorkout_Click" Width="100" Margin="5"/>
                <Button Content="Update Workout" Click="UpdateWorkout_Click" Width="100" Margin="5"/>
                <Button Content="Delete Workout" Click="DeleteWorkout_Click" Width="100" Margin="5"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Workout Name"/>
                <TextBox x:Name="WorkoutNameTextBox" Width="200" Margin="0,5"/>
                <TextBlock Text="Reps"/>
                <TextBox x:Name="RepsTextBox" Width="200" Margin="0,5"/>
                <TextBlock Text="Date Done"/>
                <DatePicker x:Name="DateDonePicker" Width="200" Margin="0,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
